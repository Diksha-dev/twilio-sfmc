{
    "workflowApiVersion": "1.1",
    "metaData": {
       "icon": "images/iconSmall.png",
       "category": "message"
    },
    "type": "REST",
    "lang": {
       "en-US": {
           "name": "Twilio SMS",
           "description": "Send Twilio SMS with Journey Builder",
           "TwilioMessage":"test"
       }
    },
    "arguments": {
        "execute": {
            "inArguments": [
                { "email": "{{Contact.Default.EmailAddress}}" },
                { "to": "{{Contact.Attribute.TwilioSecond.TwilioNumber}}" }
		
                              
            ],
            "outArguments": [],
            "url": " https://twilioapp-dk.herokuapp.com/journeybuilder/execute",
            "verb": "POST",
            "body": "",
            "format": "json",
            "useJwt": false
			
        }
    },
    "configurationArguments": {
      "applicationExtensionKey": "906b6adc-b590-4eb8-8383-0258013fc05f",
       "save": {
           "url": " https://twilioapp-dk.herokuapp.com/journeybuilder/save",
            "verb": "POST",
            "body": "",
            "format": "json",
            "useJwt": false
       },
       "publish": {
           "url": " https://twilioapp-dk.herokuapp.com/journeybuilder/publish",
            "verb": "POST",
            "body": "",
            "format": "json",
            "useJwt": false
       },
       "validate": {
           "url": " https://twilioapp-dk.herokuapp.com/journeybuilder/validate",
            "verb": "POST",
            "body": "",
            "format": "json",
            "useJwt": false
       },
       "stop": {
           "url": " https://twilioapp-dk.herokuapp.com/journeybuilder/stop",
            "verb": "POST",
            "body": "",
            "format": "json",
            "useJwt": false
       }
	    
	    
    },
    "wizardSteps": [
       { "label": "Create SMS Message", "key": "step1" }
    ],
    "userInterfaces": {
       "configModal": {
           "height": 600,
           "width": 800,
           "fullscreen": false
       }
    },
    "schema": {
        "arguments": {
            "execute": {
                "inArguments": [
                {
                        "accountSid": {
                            "dataType": "String",
                            "isNullable": false,
                            "direction": "out"
                        }
                    },
                    {
                        "authToken": {
                            "dataType": "String",
                            "isNullable": false,
                            "direction": "out"
                        }
                    },
                    {
                        "from": {
                            "dataType": "Phone",
                            "isNullable": true,
                            "direction": "out"
                        }
                    },
                    {
                        "to": {
                            "dataType": "Phone",
                            "isNullable": false,
                            "direction": "out"
                        }
                    },
                    {
                        "body": {
                            "dataType": "String",
                            "isNullable": false,
                            "direction": "out"
                        }
                    },
                    {
                        "email": {
                            "dataType": "Email",
                            "isNullable": true,
                            "direction": "out"
                        }
                    },
			 {
                        "FirstName": {
                            "dataType": "String",
                            "isNullable": true,
                            "direction": "out"
                        }
                    },
			 {
                        "SentFrom": {
                            "dataType": "String",
                            "isNullable": true,
                            "direction": "out"
                        }
                    }


],
                "outArguments": []
            }
        }
    }
}
